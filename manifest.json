{
	"name": "Transações do Nubank para CSV",
	"description": "Faça download do seu histórico do Nubank em CSV.",
	"version": "1.0",
	"manifest_version": 2,
	"permissions": ["contextMenus"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [{
		"js": ["downloadcsv.js"],
		"matches": ["https://*/*", "http://*/*"],	
		"all_frames": true
	}],
	"icons": {
		"32": "icons/32x32.png",
		"64": "icons/64x64.png",
		"128": "icons/128x128.png"
	}
}